generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  orders    Order[]
  supportMessages SupportMessage[]
  reviews   Review[]
  
  @@map("users")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  category    String
  variants    Json?    
  stock       Int      @default(0)
  images      String[]
  availabilityStatus AvailabilityStatus @default(IN_STOCK)
  visibilityStatus   VisibilityStatus   @default(VISIBLE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  orderItems  OrderItem[]
  reviews     Review[]
  
  @@map("products")
}

model Order {
  id            String      @id @default(cuid())
  orderNumber   String      @unique
  userId        String
  totalAmount   Decimal     @db.Decimal(10, 2)
  status        OrderStatus @default(PENDING)
  trackingStatus TrackingStatus @default(PENDING)
  paymentMethod PaymentMethod
  paymentStatus PaymentStatus @default(PENDING)
  phoneNumber   String?
  shippingAddress Json?     
  mpesaTransactionId String?
  isRefundRequested Boolean @default(false)
  refundReason      String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
  
  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
  
  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@map("order_items")
}

model SupportMessage {
  id        String   @id @default(cuid())
  userId    String
  email     String
  username  String
  subject   String
  message   String
  status    SupportStatus @default(OPEN)
  priority  SupportPriority @default(MEDIUM)
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  responses SupportResponse[]
  
  @@map("support_messages")
}

model SupportResponse {
  id        String   @id @default(cuid())
  messageId String
  adminId   String
  adminName String
  response  String
  createdAt DateTime @default(now())
  
  // Relations
  message SupportMessage @relation(fields: [messageId], references: [id], onDelete: Cascade)
  
  @@map("support_responses")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@map("sessions")
}

model PasswordReset {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@map("password_resets")
}

model Review {
  id        String   @id @default(cuid())
  productId String
  userId    String
  rating    Int
  review    String?
  hidden    Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

enum AvailabilityStatus {
  IN_STOCK
  OUT_OF_STOCK
  DISCONTINUED
}

enum VisibilityStatus {
  VISIBLE
  HIDDEN
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

enum OrderStatus {
  PENDING
  PAID
  CANCELED
  DELIVERED
}

enum TrackingStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
}

enum PaymentMethod {
  MPESA
  DOOR_DELIVERY
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum SupportStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum SupportPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}